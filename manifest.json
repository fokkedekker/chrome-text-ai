{
    "manifest_version": 3,
    "name": "AI Text Editor",
    "version": "1.0",
    "description": "Edit selected text using AI with an interactive diff view.",
    "permissions": [
        "activeTab",
        "storage",
        "commands"
    ],
    "host_permissions": [
        "https://api.sambanova.ai/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "options_page": "options.html",
    "commands": {
        "open-editor": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            },
            "description": "Open AI editor"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js",
                "fontawesome.min.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}