{
    "manifest_version": 3,
    "name": "AI Text Editor",
    "version": "1.0",
    "description": "Edit text using AI with diff view",
    "permissions": [
        "activeTab",
        "storage",
        "commands"
    ],
    "host_permissions": [
        "https://api.sambanova.ai/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "commands": {
        "open-editor": {
            "suggested_key": {
                "default": "Ctrl+K",
                "mac": "Command+K"
            },
            "description": "Open AI editor"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}